{
  "name": "opencode-agent-browser",
  "version": "1.0.0",
  "description": "OpenCode plugin for agent-browser - browser automation with persistent cookies and dev tools",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target node && tsc",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "agent-browser",
    "browser-automation",
    "playwright",
    "headless",
    "ai-agents",
    "web-scraping",
    "screenshots"
  ],
  "author": "Nicola Crotti",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crottolo/opencode-agent-browser.git"
  },
  "bugs": {
    "url": "https://github.com/crottolo/opencode-agent-browser/issues"
  },
  "homepage": "https://github.com/crottolo/opencode-agent-browser#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.15.0",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.21",
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
